.page-header
  = link_to new_team_service_integration_path(@team, @service), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Integration
  %h1
    Listing service
    %i= @service.name
    integrations

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Key
        %th Type
        %th Service
        %th
        %th
        %th

    %tbody
      - @integrations.each do |integration|
        %tr
          %td= integration.name
          %td= integration.key
          %td= integration.type
          %td= integration.service_name
          %td= link_to 'Show', [@team, integration.becomes(Integration)]
          %td= link_to 'Edit', [@team, integration]
          %td= link_to 'Destroy', [@team, integration.becomes(Integration)], data: { confirm: 'Are you sure?' }, method: :delete
