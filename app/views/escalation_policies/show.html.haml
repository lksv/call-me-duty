.page-header
  = link_to [@team, :escalation_policies], class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to [:edit, @escalation_policy], class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show escalation_policy

%dl.dl-horizontal
  %dt Name:
  %dd= @escalation_policy.name
  %dt Description:
  %dd= @escalation_policy.description
  %dt Team:
  %dd= @escalation_policy.team.name
